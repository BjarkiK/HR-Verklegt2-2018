@model TheBookCave.Models.ViewModels.UserListViewModel

@{
    Layout = "_AdminLayout";
}

<h1>Edit user</h1>

<form asp-action="editUser" asp-controller="adminUser" class="form-horizontal" method="POST">

    <div class="form-group">
        <label>Username</label>
        <input type="text" asp-for="User.UserName" autofocus="autofocus" class="form-control" placeholder="Enter username" value="@Id"/>
    </div>

    

    <div class="form-group">
           <button type="submit" class="btn btn-default">Delete</button>
            <a href="/adminUser"><button type="button" class="btn btn-default">Cancel</button></a>
    </div>
</form>