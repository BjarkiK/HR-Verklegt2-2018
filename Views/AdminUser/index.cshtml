@model List<TheBookCave.Models.ViewModels.UserListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> User List </h2>

<form asp-controller="adminUser" asp-action="index">
    <p>
        <input type="text" name="SearchString" value="Search for use id">
        <input type="submit" value="Submit" />
    </p>
</form>

<p><a asp-controller="adminUser" asp-action="AddUser" class="btn btn-default">Add User</a></p>

 <table align="center">
    <thead>
      <tr>
            <th>User Id</th>
            <th>Edit user</th>
            <th>AccessFailedCount</th>
            <th>ConcurrencyStamp</th>
            <th>Email</th>
            <th>EmailConfirmed</th>
            <th>LockoutEnd</th>
            <th>LockoutEnabled</th>
            <th>NormalizedEmail</th>
            <th>NormalizedUserName</th>
            <th>PasswordHash</th>
            <th>PhoneNumber</th>
            <th>PhoneNumberConfirmed</th>
            <th>SecurityStamp</th>
            <th>TwoFactorEnabled</th>
            <th>UserName</th>
        </tr>
    </thead>
    @foreach(var user in @Model)
    {
    <tbody>
        <tr>
            <td><a asp-controller="AdminUser" asp-action="userDetails" asp-route-id="@user.Id">@user.Id</a></td>
            <td><a asp-controller="AdminUser" asp-action="EditUser" class="btn btn-default" asp-route-id="@user.Id">Edit user</a></td>
            <td>@user.AccessFailedCount</td>
            <td>@user.ConcurrencyStamp</td>
            <td>@user.Email</td>
            <td>@user.EmailConfirmed</td>
            <td>@user.LockoutEnd</td>
            <td>@user.LockoutEnabled</td>
            <td>@user.NormalizedEmail</td>
            <td>@user.NormalizedUserName</td>
            <td>@user.PasswordHash</td>
            <td>@user.PhoneNumber</td>
            <td>@user.PhoneNumberConfirmed</td>
            <td>@user.SecurityStamp</td>
            <td>@user.UserName</td>
        </tr>
    </tbody>
    }
              
    </table>