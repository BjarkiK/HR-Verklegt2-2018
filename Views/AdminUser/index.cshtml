@model List<TheBookCave.Models.ViewModels.UserListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> User List </h2>

<form asp-controller="adminUser" asp-action="index">
    <p>
        <input type="text" name="SearchString" value="Search for use id">
        <input type="submit" value="Submit" />
    </p>
</form>

<p><a asp-controller="adminUser" asp-action="AddUser" class="btn btn-default">Add User</a></p>

 <table align="center">
    <thead>
      <tr>
            <th>User Id</th>
            <th>Edit User</th>
            <th>Name</th>
            <th>Picture</th>
            <th>Password</th>
            <th>FavoriteBook Id</th>
            <th>Subscription Id</th>
            <th>Order Id</th>
            <th>Permission</th>
            <th>Adress Id</th>
        </tr>
    </thead>
    @foreach(var user in @Model)
    {
    <tbody>
        <tr>
            <td><a asp-controller="AdminUser" asp-action="userDetails" asp-route-id="@user.Id">@user.Id</a></td>
            <td><a asp-controller="AdminUser" asp-action="EditUser" class="btn btn-default" asp-route-id="@user.Id">Edit user</a></td>
            <td>@user.Name</td>
            <td>@user.Password</td>
            <td>@user.Picture</td>
            <td>@user.FavoriteBookId</td>
            <td>@user.SubscriptionId</td>
            <td>@user.OrderId</td>
            <td>@user.Permission</td>
            <td>@user.AddressId</td>
        </tr>
    </tbody>
    }
              
    </table>