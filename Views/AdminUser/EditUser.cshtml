@model TheBookCave.Models.ViewModels.UserListViewModel
<h1>Edit user</h1>

<form asp-action="editUser" asp-controller="adminUser" class="form-horizontal" method="POST">
    <div class="form-group">
        <label>Username</label>
        <input type="text" asp-for="UserName" autofocus="autofocus" class="form-control" placeholder="Enter username.." value="@Model.UserName"/>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter user email.." value="@Model.Email"/>
    </div>

    <div class="form-group">
        <label>Phone number</label>
        <input type="phone" asp-for="PhoneNumber" class="form-control" placeholder="Enter user phone number.." value="@Model.PhoneNumber"/>
    </div>

    <div class="form-group">
        <label>Lockout end date</label>
        <input type="text" asp-for="LockoutEnd" class="form-control" placeholder="Enter lockout end date" value="@Model.LockoutEnd"/>
    </div>

    <div class="form-group">
           <button type="submit" class="btn btn-default">Edit User</button>
    </div>
</form>