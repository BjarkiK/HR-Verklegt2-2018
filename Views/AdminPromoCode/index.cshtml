@model List<TheBookCave.Models.ViewModels.PromoCodeListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> PromoCodeList </h2>

<form class="pull-left" class="col-sm-6" asp-controller="adminPromoCode" asp-action="index">
    <p>
        <input type="text" name="SearchString" placeholder="Search">
        <input type="submit" value="Submit" />
    </p>
</form>

<p class="pull-right" ><a id="addbuttons" class="btn btn-default btn-sm" asp-controller="adminPromoCode" asp-action="AddPromoCode" >
    <span class="glyphicon glyphicon-plus"></span> Add PromoCode</a>
</p>

<table class="table table-striped table-responsive-md btn-table ">
    <thead>
        <tr>
            <th>#</th>
            <th>Edit Promocode</th>
            <th>Remove Promocode</th>
            <th>Code </th>
            <th>Discount</th>
            <th>Description</th>
            <th>Published</th>
        </tr>
    </thead>
    @foreach(var promoCode in @Model)
    {
        <tbody>
            <tr>
                <td><a class="btn btn-primary btn-rounded btn-sm my-0" asp-controller="AdminPromoCode" asp-action="promoCodeDetails" asp-route-id="@promoCode.Id">@promoCode.Id</a></td>    
                <td><a id="editbuttons" class="btn btn-default btn-sm" asp-controller="adminPromoCode" asp-action="EditPromoCode" class="btn btn-default" asp-route-id="@promoCode.Id">
                <span class="glyphicon glyphicon-edit"></span> Edit</a></td>
                <td><a id="removebuttons" class="btn btn-default btn-sm" asp-controller="adminPromoCode" asp-action="RemovePromoCode" class="btn btn-default" asp-route-id="@promoCode.Id">
                <span class="glyphicon glyphicon-remove"></span> Remove</a></td>
                <td>@promoCode.Code</td>
                <td>@promoCode.Discount</td>
                <td>@promoCode.Description</td>
                <td>@promoCode.Published</td>
            </tr>
        </tbody>
    }
</table>