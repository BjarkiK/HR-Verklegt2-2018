@model List<TheBookCave.Models.ViewModels.OrderListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> OrderList </h2>

    <form class="pull-left" class="col-sm-6" asp-controller="adminAllOrder" asp-action="index">
    <p>
        <input type="text" name="SearchString" placeholder="Search Date of order">
        <input type="submit" value="Submit" />
    </p>
</form>

<p class="pull-right" ><a id="addbuttons" class="btn btn-default btn-sm" asp-controller="AdminAllOrder" asp-action="AddOrder" >
    <span class="glyphicon glyphicon-plus"></span> Add order</a>
</p>


 <table class="table table-striped table-responsive-md btn-table ">
    <thead >
      <tr>
            <th>#</th>
            <th>Edit order</th>
            <th>Remove order</th>
            <th>Address id</th>
            <th>User id</th>
            <th>Date</th>
        </tr>
    </thead>
    @foreach(var order in @Model)
        {
        <tbody>
            <tr>
                <td><a class="btn btn-primary btn-rounded btn-sm my-0" asp-controller="AdminAllOrder" asp-action="Details" asp-route-id="@order.Id">@order.Id</a></td>
                <td><a id="editbuttons" class="btn btn-default btn-sm" asp-controller="adminAllOrder" asp-action="EditOrder" class="btn btn-default" asp-route-id="@order.Id">
                <span class="glyphicon glyphicon-edit"></span> Edit</a></td>
                <td><a id="removebuttons" class="btn btn-default btn-sm" asp-controller="adminAllOrder" asp-action="RemoveOrder" class="btn btn-default" asp-route-id="@order.Id">
                <span class="glyphicon glyphicon-remove"></span> Remove</a></td>
                <td>@order.AddressId</td>
                <td>@order.UserId</td>
                <td>@order.Date</td>
            </tr>
        </tbody>
        }      
    </table>

