@model List<TheBookCave.Models.ViewModels.OrderListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> OrderList </h2>

<form asp-controller="adminAllOrder" asp-action="index">
    <p>
        <input type="text" name="SearchString" placeholder="Search Date of order">
        <input type="submit" value="Submit" />
    </p>
</form>

<p><a asp-controller="AdminAllOrder" asp-action="AddOrder" class="btn btn-default">Add Order</a></p>

 <table align="center">
    <thead>
      <tr>
            <th>Click order id for details</th>
            <th>Edit order</th>
            <th>Address id</th>
            <th>User id</th>
            <th>Date</th>
        </tr>
    </thead>
    @foreach(var order in @Model)
        {
        <tbody>
            <tr>
                <td><a asp-controller="AdminAllOrder" asp-action="Details" asp-route-id="@order.Id">@order.Id</a></td>
                <td><a asp-controller="adminAllOrder" asp-action="EditOrder" class="btn btn-default" asp-route-id="@order.Id">Edit order</a></td>
                <td>@order.AddressId</td>
                <td>@order.UserId</td>
                <td>@order.Date</td>
            </tr>
        </tbody>
        }      
    </table>

