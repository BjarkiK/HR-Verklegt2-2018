@model authentication_repo.Models.ViewModels.RegisterViewModel

<h1>Register</h1>

<div class="InlineDiv">
    <div id="SignUpBox">
        <form asp-action="Register" asp-controller="Account" class="form-horizontal">
            <div class="form-group">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name.."/>
            </div>
            <div class="form-group">
                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name.."/>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter email.." />
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter password.."/>
            </div>
            <div class="form-group footer-group">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
            <div class="question-container">
                <p class="question">Already have an account?</p><a asp-area="" asp-controller="Account" asp-action="Login">Login here</a>
            </div>
        </form>
    </div>
</div>

<style>
    .question-container {
        display: flex;
    }

    .question {
        padding-right: 5px;
    }
</style>