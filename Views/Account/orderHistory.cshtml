@model TheBookCave.Models.ViewModels.OrderListViewModel;

<div class="profile-container">
    <div class="row">
        <div class="btn-group btn-group-justified" role="group">
            <a asp-controller="Account" asp-action="" class="btn btn-default" role="button">Profile</a>
            <a asp-controller="Account" asp-action="orderHistory" class="btn btn-primary disabled" role="button">Order history</a>
            <a asp-controller="Account" asp-action="editProfile" class="btn btn-default" role="button">Edit profile</a>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order number</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var o in @Model) {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.Date</td>
                    <td>#</td>
                    <td>
                        <button class="btn btn-primary" value="" type="button">Details</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
</div>

<style>
    table {
        margin-top: 10px;
    }
</style>