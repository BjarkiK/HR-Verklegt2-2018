@model TheBookCave.Models.ViewModels.ProfileViewModel;

<div class="row container">
    <div class="col-md-4">
        <h1>Edit Profile</h1>

        <form asp-action="editProfile" asp-controller="Account" class="form-horizontal" method="POST">
            <div class="form-group">
                <input tpe="text" class="form-control" autofocus="autofocus" asp-for="FirstName" placeholder="Enter first name" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="LastName" placeholder="Enter last name" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <div class="profile-picture" asp-for="Picture" value="@Model.Picture"></div>
                <input class="inputBtN" type='file' onchange="readURL(this);" />
            </div>
            <h2>Address</h2>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Address.Address1" placeholder="Enter address" value="@Model.Address.Address1" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Address.Address2" placeholder="Enter more detailed address" value="@Model.Address.Address2" />
            </div>

            <select asp-for="Country">
            @foreach(var c in @Model.Countries) {
                <option value="None">Select a country</option>
                if(@Model.Country == c.Name) {
                    <option selected="selected" value="@c.Name">@c.Name</option>
                }
                else {
                    <option value="@c.Id">@c.Name</option>
                }
            }
            </select>

            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Address.Region" placeholder="Enter Region" value="@Model.Address.Region" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Address.Zip" placeholder="Enter Zip code" value="@Model.Address.Zip" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Save"/>
                
            </div>
        </form>
    </div>
</div>


<style>
    .container {
        text-align: center;
    }
    .inputBtN {
        margin: auto;
    }
    .profile-picture {
        margin: auto;
        width: 200px;
        height: 200px;
        background-repeat: no-repeat;
        background-size: cover;
        border-radius: 50%;
    }
</style>

<script src="~/js/profile.js" asp-append-version="true"></script>
