@model TheBookCave.Models.ViewModels.FrontPageViewModel

<div id="FrontPageBooks">
    <!-- (bæta við?) Þegar hoverað er yfir mynd að þá kemur númer á myndina í hvaða sæti hún er á Top10 -->
    <div class="fp-list">
        <div class="arrow">
            <button type="button" class="btn btn-default btn-arrow glyphicon glyphicon-menu-left" value="left" />
        </div>
        <div class="books-container">
            <div class="books-container2">
            @foreach(var book in @Model.Top10) {
                <div class="single-book-container">
                    <div class="book-box" value="@book.Id">
                        <img class="book-preview-image" src="~/@book.Picture" alt="Image broken">
                        <h3 class="book-preview-title">@book.Name</h3>
                        <h4 class="preview-book-author">@book.Author</h4>
                        <h4>@book.Price kr</h4>
                    </div>
                </div>
            }
            </div>
        </div>
        <div class="arrow">
            <button type="button" class="btn btn-default btn-arrow glyphicon glyphicon-menu-right" value="right">
            </button>
        </div>
    </div>
    <div class="fp-list">
        <div class="arrow">
            <button type="button" class="btn btn-default btn-arrow glyphicon glyphicon-menu-left" value="left" />
        </div>
        <div class="books-container">
            <div class="books-container2">
            @foreach(var book in @Model.Newest) {
                <div class="single-book-container">
                    <div class="book-box" value="@book.Id">
                        <img class="book-preview-image" src="~/@book.Picture" alt="Image broken">
                        <h3 class="book-preview-title">@book.Name</h3>
                        <h4 class="preview-book-author">@book.Author</h4>
                        <h4>@book.Price kr</h4>
                    </div>
                </div>
            }
            </div>
        </div>
        <div class="arrow">
            <button type="button" class="btn btn-default btn-arrow glyphicon glyphicon-menu-right" value="right">
            </button>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/frontPage.css" />
<script src="~/js/frontPage.js" asp-append-version="true"></script>