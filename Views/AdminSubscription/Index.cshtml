@model List<TheBookCave.Models.ViewModels.SubscriptionListViewModel> 

@{
    Layout = "_AdminLayout";
}

<h2> SubscriptionList </h2>

<form asp-controller="adminSubscription" asp-action="index">
    <p>
        <input type="text" name="SearchString" placeholder="Search DescriptionEn">
        <input type="submit" value="Submit" />
    </p>
</form>

<p><a asp-controller="adminSubscription" asp-action="AddSubscription" class="btn btn-default">Add Subscription</a></p>

<table align="center">
    <thead>
      <tr>
            <th>#</th>
            <th>Edit subscription</th>
            <th>TypeEn</th>
            <th>TypeIn</th>
        </tr>
    </thead>
    @foreach(var subscription in @Model)
    {
    <tbody>
        <tr>
            <td><a class="btn btn-primary btn-rounded btn-sm my-0" asp-controller="AdminSubscription" asp-action="subscriptionDetails" asp-route-id="@subscription.Id">@subscription.Id</a></td>
            <td><a asp-controller="AdminSubscription" asp-action="EditSubscription" class="btn btn-default" asp-route-id="@subscription.Id">Edit subscription</a></td>
            <td>@subscription.TypeEn</td>
            <td>@subscription.TypeIn</td>
        </tr>
    </tbody>
    }
              
    </table>