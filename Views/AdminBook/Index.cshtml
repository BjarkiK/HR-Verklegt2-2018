@model List<TheBookCave.Models.ViewModels.BookListViewModel> 

<h1>BookList</h1>

@{
    Layout = "_AdminLayout";
}

<form asp-controller="AdminBook" asp-action="index">
    <p>
        <input type="text" name="SearchString" value="Search book name">
        <input type="submit" value="Submit" />
    </p>
</form>

<p><a asp-controller="adminBook" asp-action="AddBook" class="btn btn-default">Add Book</a></p>

<div> 
    <table align="center">
    <thead>
      <tr>
            <th>BookName</th>
            <th>Edit book</th>
            <th>Remove book</th>
            <th>Picture</th>
            <th>DetailsIS</th>
            <th>DetailsEN</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Pages</th>
            <th>Quantiy</th>
            <th>Grade</th>
        </tr>
    </thead>
    @foreach(var book in @Model)
    {
    <tbody>
        <tr>
            <td><a asp-controller="AdminBook" asp-action="bookDetails" asp-route-id="@book.Id">@book.Name</a></td>
            <td><a asp-controller="adminBook" asp-action="EditBook" class="btn btn-default" asp-route-id="@book.Id">Edit book</a></td>
            <td><a asp-controller="adminBook" asp-action="RemoveBook" class="btn btn-default" asp-route-id="@book.Id">Remove book</a></td>
            <td>@book.Picture</td>
            <td>@book.DetailsIS</td>
            <td>@book.DetailsEN</td>
            <td>@book.Price</td>
            <td>@book.Discount</td>
            <td>@book.Pages</td>
            <td>@book.Quantity</td>
            <td>@book.Grade</td>
        </tr>
    </tbody>
    }
              
    </table>

</div>


