@model List<TheBookCave.Models.ViewModels.BookListViewModel> 

<h1>BookList</h1>

@{
    Layout = "_AdminLayout";
}

<form class="pull-left" class="col-sm-6" asp-controller="AdminBook" asp-action="index">
    <p>
        <input type="text" name="SearchString" placeholder="Search book name">
        <input type="submit" value="Submit" />
    </p>
</form>

<p class="pull-right" ><a id="addbuttons" class="btn btn-default btn-sm" asp-controller="adminBook" asp-action="AddBook" >
    <span class="glyphicon glyphicon-plus"></span> Add Book</a>
</p>

<div> 
    <table class="table table-striped table-responsive-md btn-table ">
    <thead>
      <tr>
            <th>BookName</th>
            <th>Edit book</th>
            <th>Remove book</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Pages</th>
            <th>Quantiy</th>
            <th>Grade</th>
        </tr>
    </thead>
    @foreach(var book in @Model)
    {
    <tbody>
        <tr>
            <td><a class="btn btn-primary btn-rounded btn-sm my-0" asp-controller="AdminBook" asp-action="bookDetails" asp-route-id="@book.Id">@book.Name</a></td>
            <td><a id="editbuttons" class="btn btn-default btn-sm" asp-controller="adminBook" asp-action="EditBook" class="btn btn-default" asp-route-id="@book.Id">
                <span class="glyphicon glyphicon-edit"></span> Edit</a></td>
            <td><a id="removebuttons" class="btn btn-default btn-sm" asp-controller="adminBook" asp-action="RemoveBook" class="btn btn-default" asp-route-id="@book.Id">
                <span class="glyphicon glyphicon-remove"></span> Remove</a></td>
            <td>@book.Price</td>
            <td>@book.Discount</td>
            <td>@book.Pages</td>
            <td>@book.Quantity</td>
            <td>@book.Grade</td>
        </tr>
    </tbody>
    }
              
    </table>

</div>


