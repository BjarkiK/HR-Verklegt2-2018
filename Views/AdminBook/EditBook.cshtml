@model TheBookCave.Models.ViewModels.BookDetailedListViewModel;

<div class="row container">
    <div class="col-md-4">
        <h1>Edit Book</h1>

        <form asp-action="editBook" asp-controller="AdminBook" class="form-horizontal" method="POST">
            <div class="form-group">
                <input tpe="text" class="form-control" autofocus="autofocus" asp-for="Name" placeholder="Enter first name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Price" placeholder="Enter last name" value="@Model.Price" />
            </div>
            <div class="form-group">
                <div class="profile-picture" asp-for="Picture" value="@Model.Picture"></div>
                <input class="inputBtN" type='file' onchange="readURL(this);" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="DetailsIS" placeholder="Enter address" value="@Model.DetailsIS" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="DetailsEN" placeholder="Enter more detailed address" value="@Model.DetailsEN" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Discount" placeholder="Enter more detailed address" value="@Model.Discount" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Pages" placeholder="Enter more detailed address" value="@Model.Pages" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Quantity" placeholder="Enter more detailed address" value="@Model.Quantity" />
            </div>
            <div class="form-group">
                <input tpe="text" class="form-control" asp-for="Published" placeholder="Enter more detailed address" value="@Model.Published" />
            </div>

            <select asp-for="Genre">
            <option value="None">Select a Genre</option>
            @foreach(var c in @Model.Genres) {
                if(@Model.Genre == c.GenreEN) {
                    <option selected="selected" value="@c.Id">@c.GenreEN</option>
                }
                else {
                    <option value="@c.Id">@c.GenreEN</option>
                }
            }
            </select>
             <select asp-for="Author">
            <option value="None">Select a Author</option>
            @foreach(var c in @Model.Authors) {
                if(@Model.Author == c.Name) {
                    <option selected="selected" value="@c.AuthorId">@c.Name</option>
                }
                else {
                    <option value="@c.AuthorId">@c.Name</option>
                }
            }
            </select>
            <select asp-for="Publisher">
            <option value="None">Select a Publisher</option>
            @foreach(var c in @Model.Publishers) {
                if(@Model.Publisher == c.Name) {
                    <option selected="selected" value="@c.Id">@c.Name</option>
                }
                else {
                    <option value="@c.Id">@c.Name</option>
                }
            }
            </select>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Save"/>
            </div>
        </form>
    </div>
</div>
