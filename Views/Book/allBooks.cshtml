<link rel="stylesheet" href="~/css/bookList.css" />
<h1>BookList</h1>

<div class="row">
    @foreach(var book in @Model)
    {
    <div class="col-md-3 BookBox">
        <div class="thumbnail">
            <img class="book-image" src="~/@book.Picture" alt="Image broken">
            <div class="caption">
                <div class="titleDiv">
                    <h3 class="title">@book.Name</h3>
                </div>
                <h4 class="author">Author</h4>
                <p>@book.DetailsEN</p>
                <a asp-action="details" asp-route-id="@book.Id" class="btn btn-primary" role="button">Details</a>
            </div>
        </div>
    </div>
    }
</div>