<link rel="stylesheet" href="~/css/search.css" />
<h2>Search Result</h2>

@if(@Model.Count == 0) {
    <div class="no-results">Your search didnt give any reulst. Try changin the words.</div>
}

<div class="row">
@foreach (var book in Model)
{
    <div class="searchResults">
        <div class="details click-book" value="@book.Id">
            <div class="col-md-1 searchBoxes">
                <img class="book-cover" src="~/@book.Picture">
            </div>
            <div class="col-md-3 searchBoxes">
                <h3>@book.Name</h3>
            </div>
            <div class="col-md-3 searchBoxes">
                <h3>@book.Author</h3>
            </div>
        </div>
        <button class="btn btn-primary btn-lg addtocart-button" value="@book.Id" type="button">Add To Cart!</button>
    </div>

}
</div>

<style>
    .no-results {
        display: flex;
        justify-content: center;
    }
</style>