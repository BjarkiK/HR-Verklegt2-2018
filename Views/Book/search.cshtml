<link rel="stylesheet" href="~/css/search.css" />
<h2>Search Result</h2>

@if(@Model.Count == 0) {
    <div class="no-results">Your search didn't give any reulst. Try changin the words.</div>
}

<div class="row">
@foreach (var book in Model)
{
    <div class="searchResults">
        <div class="col-md-1 searchBoxes">
            <img src="~/@book.Picture">
        </div>
        <div class="col-md-3 searchBoxes">
            <h3>@book.Name</h3>
        </div>
        <div class="col-md-3 searchBoxes">
            <h3>@book.Author</h3>
        </div>
        <div class="col-md-1">
            <div class="buttonDiv"><a asp-controller="book" asp-action="details" asp-route-id="@book.Id" class="btn btn-primary btn-lg detailsButt" role="button">Details</a></div>
        </div>
        <div class="col-md-2"></div>
    </div>
}
</div>

<style>
    .no-results {
        display: flex;
        justify-content: center;
    }
</style>