<link rel="stylesheet" href="~/css/bookList.css" />

<div class="row listrow">
    @foreach(var book in @Model)
    {
    <div class="col-md-3 book-box">
        <div class="thumbnail">
            <div class="booklist-container click-book" value="@book.Id">
                <img class="book-image" src="~/@book.Picture" alt="Image broken">
                <div class="caption">
                    <div class="titleDiv">
                        <h3 class="title">@book.Name</h3>
                    </div>
                    <h4 class="author">@book.Author</h4>
                    <p>@book.DetailsEN</p>
                    <p id="price">@book.Price ISK</p>
                </div>
            </div>
            <div class="addCart">
                <button class="btn btn-primary addtocart-button" value="@book.Id" type="button">Add To Cart!</button>
            </div>
        </div>
    </div>
    }
</div>